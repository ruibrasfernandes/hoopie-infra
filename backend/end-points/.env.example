# Environment configuration for Hoopie Streaming Agent
# Copy this file to .env and fill in your values

# Google Cloud Configuration for Streaming
GOOGLE_GENAI_USE_VERTEXAI=TRUE
GOOGLE_CLOUD_PROJECT=hoopie-dev
GOOGLE_CLOUD_LOCATION=us-central1

# SSL Certificate (required for some environments)
# SSL_CERT_FILE=/path/to/certificates

# Alternative: AI Studio Configuration (not recommended for streaming)
# GOOGLE_GENAI_USE_VERTEXAI=FALSE
# GOOGLE_API_KEY=your-api-key

# Server Configuration
HOST=0.0.0.0
PORT=8000